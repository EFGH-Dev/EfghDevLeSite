<nav class="navbar navbar-expand-lg navbar-custom">
    <div class="container-fluid">
        <a class="navbar-brand-custom" href="">EFGH <span style="color: var(--primary-pink)">DEV</span></a>

        <button class="navbar-toggler" type="button" @onclick="ToggleNavMenu" style="border-color: var(--primary-cyan);">
            <span class="navbar-toggler-icon" style="background-image: url('data:image/svg+xml;charset=utf8,%3Csvg viewBox=\'0 0 30 30\' xmlns=\'http://www.w3.org/2000/svg\'%3E%3Cpath stroke=\'rgba(0, 242, 255, 1)\' stroke-width=\'2\' stroke-linecap=\'round\' stroke-miterlimit=\'10\' d=\'M4 7h22M4 15h22M4 23h22\'/%3E%3C/svg%3E');"></span>
        </button>

        @if (!collapseNavMenu)
        {
            <div @onclick="CloseNavMenu" class="nav-overlay"></div>
        }

        <div class="@NavMenuCssClass navbar-collapse justify-content-end">
            <ul class="navbar-nav">
                <li class="nav-item">
                    <NavLink class="nav-link nav-item-custom" href="" Match="NavLinkMatch.All">
                        Accueil
                    </NavLink>
                </li>
                <li class="nav-item">
                    <NavLink class="nav-link nav-item-custom" href="realisations">
                        Mes Réalisations
                    </NavLink>
                </li>
                <li class="nav-item">
                    <NavLink class="nav-link nav-item-custom" href="Contact">
                        Me Contacter
                    </NavLink>
                </li>
            </ul>
        </div>
    </div>
</nav>

@code {
    // Typage explicite booléen pour l'état du menu
    private bool collapseNavMenu = true;

    // Expression-bodied member pour calculer la classe CSS dynamiquement
    // Si collapseNavMenu est true, on ajoute "collapse" (caché), sinon null (visible)
    private string? NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }

    private void CloseNavMenu()
    {
        collapseNavMenu = true;
    }
}